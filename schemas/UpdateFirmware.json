{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "UpdateFirmwareRequest",
    "type": "object",
    "properties": {
        "retrieveDate": {
            "type": "string",
            "format": "date-time"
        },
        "location": {
            "type": "string",
            "format": "uri"
        },
        "retries": {
            "type": "integer"
        },
        "retryInterval": {
            "type": "integer"
        },
        "requestId": {
            "type": "string",
            "maxLength": 36
        }
    },
    "additionalProperties": false,
    "required": [
        "retrieveDate",
        "location"
    ]
}
